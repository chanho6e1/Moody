<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="142.5dp"
            android:layout_height="36.59dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/login_logo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="61.03dp"
            android:layout_height="18.92dp"
            android:layout_margin="14dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/login_name" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="722dp"
            android:layout_gravity="center"
            android:background="@drawable/sign_box"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="104dp" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="352.15dp"
                android:layout_height="43.73dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/login_email"
                android:hint="     E-mail"
                android:inputType="textEmailAddress"
                android:textColorHint="#ffffff"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/login_pw"
                android:layout_width="352.15dp"
                android:layout_height="43.73dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/login_email"
                android:hint="     Password"
                android:inputType="textPassword"
                android:textColorHint="#ffffff"
                android:textSize="13dp" />

            <Button
                android:id="@+id/login_loginBtn"
                android:layout_width="352.15dp"
                android:layout_height="43.73dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_btn"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/line"
                android:layout_width="360dp"
                android:layout_height="40px"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/login_bar" />

            <Button
                android:id="@+id/login_signBtn"
                android:layout_width="352.15dp"
                android:layout_height="43.73dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/login_btn"
                android:stateListAnimator="@null"
                android:text="Sign up"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="13dp" />

            <Button
                android:id="@+id/login_findBtn"
                android:layout_width="352.15dp"
                android:layout_height="43.73dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/login_btn"
                android:stateListAnimator="@null"
                android:text="Forget your password"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>