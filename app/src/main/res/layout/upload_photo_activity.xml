<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="top"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="@drawable/yj_top_border"
            android:elevation="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/upload_back_btn"
            android:layout_width="14.15dp"
            android:layout_height="10.85dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="39dp"
            android:background="@drawable/yj_back_btn"
            android:stateListAnimator="@null" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ok_Layout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="39dp"
            android:background="@drawable/yj_btn1_border"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upload_okBtn"
                android:layout_width="13.51dp"
                android:layout_height="13.51dp"
                android:background="@drawable/yj_chat_plus_btn" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/upload_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Upload photo"
            android:textSize="13dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="195dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="377dp"
                android:layout_height="244dp"
                android:layout_gravity="center"
                android:background="@drawable/yj_feed_border"
                android:elevation="5dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/upload_image"
                    android:layout_width="377dp"
                    android:layout_height="195dp"
                    android:layout_gravity="center"
                    android:background="@drawable/yj_upload_border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/tag_field"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:background="#00ff0000"
                        android:stateListAnimator="@null"
                        android:text="#태그"
                        android:textAlignment="textStart"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="377dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/yj_feed_border"
                android:elevation="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resultTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="13dp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/upload_sel_btn"
            android:layout_width="126dp"
            android:layout_height="41dp"
            android:layout_marginTop="305dp"
            android:gravity="center"
            android:background="@drawable/yj_upload_btn"
            android:orientation="vertical"
            android:onClick="onClick">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Photo"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textAlignment="center"
                android:textColor="#707070"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>