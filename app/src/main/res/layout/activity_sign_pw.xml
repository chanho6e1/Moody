<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_background">

    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/sign_pw_backBtn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/sign_back" />

        <Space
            android:layout_width="81dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:src="@drawable/login_logo"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="wrap_content"
        android:layout_height="655dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/sign_box"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="78dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="27dp"
            android:textColor="#ffffff"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Please enter your password"
            android:textSize="13dp"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/sign_input_pw"
            android:layout_width="352.15dp"
            android:layout_height="43.73dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_email"
            android:layout_gravity="center"
            android:hint="     Password"
            android:textAllCaps="false"
            android:textSize="13dp"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:layout_marginBottom="2dp"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/sign_pw_check"
            android:layout_width="352.15dp"
            android:layout_height="43.73dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/login_email"
            android:layout_gravity="center"
            android:hint="     Comfirm Password"
            android:textAllCaps="false"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:textSize="13dp"
            android:layout_marginBottom="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/sign_pw_nextBtn"
            android:layout_width="352.15dp"
            android:layout_height="43.73dp"
            android:layout_margin="2dp"
            android:background="@drawable/login_btn"
            android:layout_gravity="center"
            android:stateListAnimator="@null"
            android:text="Next"
            android:textAllCaps="false"
            android:textSize="13dp"
            android:textColor="#ffffff"/>
    </LinearLayout>


</LinearLayout>