<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/infoLbl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="My Information"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/profile_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/ic_insert_photo_black_24dp" />

        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="USER NAME"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="123456@gmail.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/block_message_btn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#00FF0000"
        android:text="메시지 차단 설정"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/blocked_userlist_btn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#00FF0000"
        android:text="차단 목록"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/change_password_btn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#00FF0000"
        android:text="비밀번호 변경"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#00FF0000"
        android:text="로그아웃"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/select_photo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="앨범에서 사진 선택" />

    <Button
        android:id="@+id/change_original_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기본 이미지로 변경" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소" />

</LinearLayout>
