<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/chatList_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/yj_profile_shadow"
                android:gravity="center">

                <ImageView
                    android:id="@+id/chat_image2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/yj_profile_border_white"
                    android:padding="2dp"
                    android:src="@drawable/profile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/yj_profile_shadow"
                android:gravity="center">

                <ImageView
                    android:id="@+id/chat_image3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/yj_profile_border_white"
                    android:padding="2dp"
                    android:src="@drawable/profile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/yj_profile_shadow"
                android:gravity="center">

                <ImageView
                    android:id="@+id/chat_image4"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/yj_profile_border_white"
                    android:padding="2dp"
                    android:src="@drawable/profile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/yj_profile_shadow"
                android:gravity="center">

                <ImageView
                    android:id="@+id/chat_image5"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/yj_profile_border_white"
                    android:padding="2dp"
                    android:src="@drawable/profile" />

            </LinearLayout>

        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chat_room_name"
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:maxLength="23"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chat_time"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="textEnd"
                    android:textColor="#9F9F9F"
                    android:textSize="9dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chat_lastMsg"
                    android:layout_width="224dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:maxLength="23"
                    android:textSize="13dp" />

                <LinearLayout
                    android:id="@+id/count_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/msg_count"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:background="@drawable/yj_btn1_border"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>